<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tony.mtglifecounter" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TwoPlayerScreen"
            android:label="@string/title_activity_two_player_screen"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ThreePlayerScreen"
            android:label="@string/title_activity_three_player_screen"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".FourPlayerScreen"
            android:label="@string/title_activity_four_player_screen"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".TwoPlayerScreenAlt"
            android:label="@string/title_activity_two_player_screen_alt"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ThreePlayerScreenAlt"
            android:label="@string/title_activity_three_player_screen_alt"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".FourPlayerScreenAlt"
            android:label="@string/title_activity_four_player_screen_alt"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Settings"
            android:label="@string/title_activity_settings"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".DefeatScreen"
            android:label="@string/title_activity_defeat_screen" >
        </activity>
    </application>

</manifest>
