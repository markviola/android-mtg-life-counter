<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/material_blue_grey_800">

    <TextView
        android:id="@+id/player_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"

        android:text="Player Name"
        android:textSize="23dp"
        android:textColor="#FFFFFF"/>

    <TextView
        android:id="@+id/player_life"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"

        android:text="20"
        android:textSize="23dp"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/sub_life_total"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="45dp"
        android:layout_toLeftOf="@+id/player_life"
        android:layout_marginRight="25dp"

        android:backgroundTint="#0099CC"
        android:text="-1"
        android:textColor="#FFFFFF"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="sub_action"/>

    <Button
        android:id="@+id/add_life_total"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="45dp"
        android:layout_toRightOf="@+id/player_life"
        android:layout_marginLeft="25dp"

        android:backgroundTint="#0099CC"
        android:text="+1"
        android:textColor="#FFFFFF"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="add_action"/>

    <Button
        android:id="@+id/sub_life_total_5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="45dp"
        android:layout_toLeftOf="@+id/player_life"
        android:layout_marginRight="90dp"

        android:backgroundTint="#0099CC"
        android:text="-5"
        android:textColor="#FFFFFF"
        android:gravity="center_vertical|center_horizontal" />

    <Button
        android:id="@+id/add_life_total_5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="45dp"
        android:layout_toRightOf="@+id/player_life"
        android:layout_marginLeft="90dp"

        android:backgroundTint="#0099CC"
        android:text="+5"
        android:textColor="#FFFFFF"
        android:gravity="center_vertical|center_horizontal" />

</RelativeLayout>