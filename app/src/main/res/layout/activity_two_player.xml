<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.tony.mtglifecounter.TwoPlayer"
    android:background="#006693">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/two_player_player_one"
        android:id="@+id/two_player_player_one"
        android:textColor="#FFFFFF"
        android:rotation="180"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/two_player_player_two"
        android:id="@+id/two_player_player_two"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:layout_below="@+id/two_player_player_one"
        android:layout_alignLeft="@+id/two_player_player_one"
        android:layout_alignStart="@+id/two_player_player_one"
        android:layout_marginTop="187dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20"
        android:id="@+id/two_player_player_one_life"
        android:layout_marginTop="75dp"
        android:layout_below="@+id/two_player_player_one"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20"
        android:id="@+id/two_player_player_two_life"
        android:layout_marginTop="75dp"
        android:layout_below="@+id/two_player_player_two"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:textSize="30dp" />

</RelativeLayout>
